@model IEnumerable<Homework.SkillTree.Models.CategoriesViewModel>
@{
    ViewBag.Title = "記帳本明細";
    var num = 1;
}
<h2>@ViewBag.Title.</h2>

@*需分開寫，不能寫在同一頁，要用哪種方式分開不強求，你可以自行測試選擇適合的方式。
    必須要有100筆以上的假資料，嚴禁寫死於 HTML 你需要想辦法讓他可以有假資料並且每筆資料至少有兩處以上的不同點。
    最前方的數字是頁面上的流水號，不能從假資料內讀取，只能寫在HTML頁面上*@

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Money)</th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@num</td>
            @if (item.Category.ToString() == "Expend")
            {
                <td style="color:red">支出</td>

            }
            else
            {
                <td style="color:blue">收入</td>

            }
            <td>@item.Date.ToString("yyyy-MM-dd")</td>
            <td>@item.Money</td>
        </tr>
                num++;
            }
        </table>
    </div>
</div>
